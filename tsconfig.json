{
  "compilerOptions": {
    "declaration": true,
    "target": "ES6",
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "dist",
    "rootDir": ".",
    "moduleResolution": "node",
    "noUncheckedIndexedAccess": true,
    "noEmit": true,
    "declarationMap": true,
    "esModuleInterop": true
  },
  "exclude": [
    "dist",
    "node_modules"
  ]
}
