{
  "compilerOptions": {
    "declaration": true,
    "target": "es6",
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "dist",
    "rootDir": "src",
    "moduleResolution": "node",
    "noUncheckedIndexedAccess": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "lib": ["DOM", "es5", "es6"],
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "dist",
    "node_modules"
  ]
}
